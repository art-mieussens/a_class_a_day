<article class="bg-white text-dark px-2 py-2 my-3 rounded-lg">
  <header class="row p-2">
    <div class="col-9">
      <h1 class="font-weight-light"><%= post.title %></h1>
    </div>
    <div class="col-3 text-right">
      <%= time_ago_in_words(post.created_at) %> ago.
    </div>
  </header>
  <% if local_assigns[:preview] %>
    <main class="col-12 text-justify">
      <p><%= post.description %></p>
    </main>
    <div class="text-right pr-2 pb-2">
      <%= link_to "more\u2026", post, class: "text-danger" %>
    </div>
  <% else %>
    <main class="col-12 text-justify">
      <p><%= post.content %></p>
    </main>
  <% end %>
</article>